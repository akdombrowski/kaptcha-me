{
  /**
  * Config for Debugging NextJS
  */
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "start server",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev",
      "presentation": {
        "hidden": false,
        "group": "browser",
        "order": 4
      },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**",
      ],
    },
    // Only works if start without any open instances of Chrome and will close
    // all open instances of Chrome when stopping debugging
    {
      "name": "launch chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:3000",
      "webRoot": "${workspaceFolder}",
      "userDataDir": false,
      "runtimeArgs": [
        "--profile-directory=Profile 8"
      ],
      "presentation": {
        "hidden": false,
        "group": "browser",
        "order": 5
      },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**",
      ],
    },
    {
      "name": "launch server + browser",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev",
      "serverReadyAction": {
        // "pattern": ".+, url: (https?://.+)",
        // "pattern": "
        //   ▲ Next.js 14.2.8
        //   - Local:        http://127.0.0.1:3000
        //   - Network:      http://127.0.0.1:3000
        //   - Environments: .env.development.local
        //   - Experiments (use with caution):
        //     · typedRoutes
        //  ✓ Starting...
        //  ✓ Ready in 2.1s",
        "pattern": ".*- Local:\\s+ https?://127.0.0.1:([0-9]+).*",
        "uriFormat": "http://127.0.0.1:%s",
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "webRoot": "${workspaceFolder}/src/app"
      },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**",
      ],
      "presentation": {
        "hidden": false,
        "order": 1,
        "group": "1"
      },
      "cascadeTerminateToConfigurations": []
    },
  ],
  "compounds": [
    {
      "name": "server+browser",
      "configurations": [
        "launch chrome",
        "start server"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "server+client",
        "order": 2
      },
    },
    {
      "name": "server+browser-attach",
      "configurations": [
        "Attach to Chrome",
        "start server"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "server+client",
        "order": 3
      },
    }
  ]
}