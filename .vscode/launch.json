{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "server",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev",
      "presentation": {
        "hidden": false,
        "group": "server",
        "order": 1
      },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**",
      ],
      "outFiles": [
        "${workspaceFolder}/.next/server/app/**/page.js",
        "${workspaceFolder}/.next/server/src/**/*.js",
        "${workspaceFolder}/.next/static/chunks/app/**/*.js",
        "${workspaceFolder}/.next/static/chunks/css/**/*.css",
      ],
    },
    {
      "name": "launch chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:3000",
      "presentation": {
        "hidden": false,
        "group": "browser",
        "order": 1
      },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**",
      ],
      "outFiles": [
        "${workspaceFolder}/.next/static/chunks/app/**/*.js",
        "${workspaceFolder}/.next/static/chunks/css/**/*.css",
      ],
    },
  ],
  "compounds": [
    {
      "name": "vscode+chrome",
      "configurations": [
        "launch chrome",
        "server"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "server+client",
        "order": 1
      }
    }
  ]
}